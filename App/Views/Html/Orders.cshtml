<div>
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Customers</div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-show="ordersCtrl.isLoadingCustomers">
                            <td colspan="3" class="text-center"><span class="glyphicon glyphicon-repeat spinner"></span></td>
                        </tr>
                        <tr ng-repeat="customer in ordersCtrl.customers | orderBy : 'Name'" ng-click="ordersCtrl.getCustomerOrders(customer)">
                            <td>{{$index+1}}</td>
                            <td>{{customer.Name}}</td>
                            <td>{{customer.Email}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">Orders</div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-show="ordersCtrl.isLoadingOrders">
                            <td colspan="4" class="text-center"><span class="glyphicon glyphicon-repeat spinner"></span></td>
                        </tr>
                        <tr ng-repeat="order in ordersCtrl.orders | orderBy : 'Product'">
                            <td>{{$index+1}}</td>
                            <td>{{order.Product}}</td>
                            <td>{{order.Quantity}}</td>
                            <td>{{order.Price | currency}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>