<div>
    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">Customers</div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Company</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-show="customersCtrl.isLoadingCustomers">
                            <td colspan="6" class="text-center"><span class="glyphicon glyphicon-repeat spinner"></span></td>
                        </tr>
                        <tr ng-repeat="customer in customersCtrl.customers | orderBy : 'Name'">
                            <td>{{$index+1}}</td>
                            <td>{{customer.Name}}</td>
                            <td>{{customer.Company}}</td>
                            <td>{{customer.Email}}</td>
                            <td>{{customer.Phone}}</td>
                            <td>
                                <div>
                                    <button ng-click="customersCtrl.setEditCustomer(customer)" type="button" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></button>
                                    <button ng-click="customersCtrl.deleteCustomer(customer)" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">Add/Edit Customer</div>
                <div class="panel-body">
                    <form role="form" name="customersCtrl.addEditForm" ng-submit="customersCtrl.addCustomer()">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" placeholder="Name" ng-model="customersCtrl.editCustomer.Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="company" placeholder="Company" ng-model="customersCtrl.editCustomer.Company" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Email" ng-model="customersCtrl.editCustomer.Email" required>
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" id="tel" placeholder="Telephone" ng-model="customersCtrl.editCustomer.Phone" required>
                        </div>
                        <button ng-click="customersCtrl.createNew()" class="btn btn-success">Create New<span class="glyphicon glyphicon-user"></span></button>
                        <button ng-hide="customersCtrl.isInEditMode" type="submit" class="btn btn-success" ng-disabled="customersCtrl.addEditForm.$invalid">
                            Add<span class="glyphicon glyphicon-save"></span>
                        </button>
                        <button ng-show="customersCtrl.isInEditMode" type="submit" class="btn btn-info" ng-disabled="customersCtrl.addEditForm.$invalid">
                            Edit<span class="glyphicon glyphicon-pencil"></span>
                        </button>
                    </form>
                </div>
            </div>
            <div ng-show="customersCtrl.message" class="alert" ng-class="customersCtrl.isError ? 'alert-danger' : 'alert-info'">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span ng-bind="customersCtrl.message"></span>
            </div>
        </div>
    </div>
</div>